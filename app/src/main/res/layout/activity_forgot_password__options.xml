<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Login_Signup.ForgotPassword_Options"
    android:padding="10dp"
    android:background="@color/yellow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/login_back_button"
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/back_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aclonica"
            android:text="FORGOT\nPASSWORD"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Please choose an option"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/mobile_icon"
                android:id="@+id/mobile_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_icon_title"
                android:layout_marginTop="30dp"
                android:text="Send code through SMS"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_toRightOf="@+id/mobile_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/mobile_icon"
                android:layout_below="@+id/mobile_icon_title"
                android:text="Will be fetched from database(+1562526)"
                android:textColor="@color/black"></TextView>

            <!-- To make the whole section clickable
             we are making it a button-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:onClick="callForgotPasswordOptionsPage"></Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/email_icon" />

            <TextView
                android:id="@+id/email_icon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/email_icon"
                android:text="Send code through EMAIL"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_icon_title"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/email_icon"
                android:text="Will be fetched from database@gmail.com"
                android:textColor="@color/black"></TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:onClick="callForgotPasswordOptionsPage"></Button>

        </RelativeLayout>


    </LinearLayout>



</ScrollView>